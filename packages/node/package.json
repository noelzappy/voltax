{
  "name": "@noelzappy/voltax",
  "version": "0.1.0",
  "description": "Voltax Node.js SDK for unified payment gateway integration",
  "license": "MIT",
  "author": "https://github.com/noelzappy",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
